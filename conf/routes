# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.ApplicationController.index
GET         /home                            controllers.ApplicationController.home
GET         /signIn                          controllers.ApplicationController.signIn
GET         /signUp                          controllers.ApplicationController.signUp
GET         /signOut                         controllers.ApplicationController.signOut
GET         /authenticate/:provider          controllers.SocialAuthController.authenticate(provider)
POST        /authenticate/credentials        controllers.CredentialsAuthController.authenticate
POST        /signUp                          controllers.SignUpController.signUp
GET         /mantra/list                     controllers.MantraController.list

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)

# Mantra Resource
GET         /mantra                          controllers.MantraController.list
POST  		/mantra               			 controllers.MantraController.save
GET			/mantra/:id 					 controllers.MantraController.get(id:Long)

# Accumulations Resource
POST        /accumulation                    controllers.ApplicationController.save
GET         /accumulation                    controllers.ApplicationController.get